<div id="pageContainer">
		<div id="errors">{{errorMsg}}</div>
		<div id="serverresponse"></div>
			<form id="contactform" action="" method="post">
			<div class="inputgroup">
			<label class="label">Full Name</label>
			<input type="text" class="input" name="fullname" id="fullname"/>
			</div>
			<div class="inputgroup">	
			<label class="label">Email Address</label>
			<input type="text" class="input" name="email" id="email"/>
			</div>
			<div class="inputgroup">
			<label class="label">Message</label>
			<textarea class="input" id="message" name="message" rows="10" cols="40" ></textarea>
			</div>
			<input type="button" id="submitmsg" value="send" >
			</form>
	</div>
	<script type="text/javascript" src="/js/formprocessing.js"></script>